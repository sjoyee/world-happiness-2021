{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/sjoyee/FIT3179_W10_Homework/main/data/world-happiness-report.csv"
    },
    "params": [
        {
            "name": "top_k_countries",
            "value": 6,
            "bind": {
                "input": "range",
                "min": 1,
                "max": 10,
                "step": 1,
                "name": "Top K Countries"
            }
        }
    ],
    "transform": [
        {
            "sort": [
                {
                    "field": "life_ladder",
                    "order": "descending"
                }
            ],
            "window": [
                {
                    "op": "rank",
                    "as": "ladder_rank"
                }
            ],
            "groupby": [
                "year"
            ]
        },
        {
            "filter": "datum.ladder_rank <= top_k_countries"
        }
    ],
    "encoding": {
        "x": {
            "field": "year",
            "title": "Year",
            "type": "ordinal",
            "axis": {
                "domain": false,
                "titlePadding": 15,
                "labelAngle": 0,
                "ticks": false
            }
        },
        "y": {
            "field": "ladder_rank",
            "title": "Rank of Happiness",
            "type": "quantitative",
            "sort": "descending",
            "scale": {
                "domain": [
                    0.5,
                    {
                        "expr": "top_k_countries+0.5"
                    }
                ]
            },
            "axis": {
                "domain": false,
                "titlePadding": 15,
                "tickCount": {
                    "expr": "top_k_countries"
                },
                "labelAngle": 0,
                "tickMinStep": 1
            }
        },
        "color": {
            "field": "country_name",
            "type": "nominal",
            "title": "Country",
            "scale": {"scheme": "rainbow"}
        },
        "tooltip": [
            {
                "field": "country_name",
                "title": "Country"
            },
            {
                "field": "life_ladder",
                "title": "Happiness Ladder Score",
                "format": ".3f"
            }
        ]
    },
    "layer": [
        {
            "mark": {
                "type": "line",
                "interpolate": "monotone"
            },
            "encoding": {
                "color": {
                    "field": "country_name",
                     "scale": {"scheme": "rainbow"}
                },
                "size": {
                    "condition": {
                        "param": "legend_filter",
                        "empty": false,
                        "value": 3
                    },
                    "value": 1
                }
            }
        },
        {
            "params": [
                {
                    "name": "legend_filter",
                    "select": {
                        "type": "point",
                        "on": "click",
                        "fields": [
                            "country_name"
                        ]
                    },
                    "bind": "legend"
                }
            ],
            "mark": {
                "type": "tick",
                "thickness": 5
            },
            "encoding": {
                "color": {
                    "condition": {
                        "param": "legend_filter",
                        "empty": false,
                        "value": "black"
                    },
                    "field": "country_name"
                },
                 "size": {
                    "condition": {
                        "param": "legend_filter",
                        "empty": false,
                        "value": 20
                    },
                    "value": 10
                }
            }
        }
    ],
    "config": {
        "background": "#FBF9F7",
        "view": {
            "stroke": "transparent"
        }
    }
}