{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/sjoyee/FIT3179_W10_Homework/main/data/world-happiness-report.csv"
    },
    "transform": [
        {
            "lookup": "country_name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/sjoyee/FIT3179-W9-Homework/main/data/world-happiness-report-2021.csv"
                },
                "key": "country_name",
                "fields": [
                    "regional_indicator"
                ]
            }
        },
        {
            "aggregate": [
                {
                    "op": "mean",
                    "field": "life_ladder",
                    "as": "avg_life_ladder"
                }
            ],
            "groupby": [
                "year",
                "regional_indicator"
            ]
        },
        {
            "filter": "datum.regional_indicator != null"
        }
    ],
    "mark": {
        "type": "area",
        "line": {}
    },
    "encoding": {
        "x": {
            "timeUnit": "yearmonth",
            "field": "year",
            "title": "Year",
            "axis": {
                "domain": false,
                "grid": false,
                "format": "%Y",
                "titlePadding": 15,
                "labelFlush": false
            }
        },
        "y": {
            "field": "avg_life_ladder",
            "title": "Average. Happiness Ladder Score",
            "type": "quantitative",
            "axis": null
        },
        "color": {
            "field": "regional_indicator",
            "scale": {
                "scheme": "tableau10"
            }
        },
        "tooltip": [
            {
                "field": "regional_indicator",
                "title": "Region"
            },
            {
                "field": "year",
                "title": "Year",
                "type": "temporal",
                "format": "%Y"
            },
            {
                "field": "avg_life_ladder",
                "title": "Avg. Happiness Ladder Score",
                "format": ".3f"
            }
        ]
    },
    "config": {
        "background": "#FBF9F7"
    }
}