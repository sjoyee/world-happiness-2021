{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/sjoyee/world-happiness-2021/main/js/world.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "width": 700,
  "height": 500,
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "whitesmoke"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/sjoyee/world-happiness-2021/main/js/world.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/sjoyee/world-happiness-2021/main/data/world-happiness-report-2021.csv"
            },
            "key": "country_name",
            "fields": [
              "ladder_score"
            ]
          }
        },
        {
          "calculate": "datum.ladder_score",
          "as": "Ladder Score"
        },
        {
          "sort": [
            {
              "field": "ladder_score",
              "order": "descending"
            }
          ],
          "window": [
            {
              "op": "rank",
              "as": "ladder_rank"
            }
          ],
          "groupby": [
            "year"
          ]
        }
      ],
      "projection": {
        "type": "equirectangular"
      },
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "Ladder Score",
          "type": "quantitative"
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Ladder Score",
            "type": "quantitative"
          },
          {
            "field": "ladder_rank",
            "type": "quantitative",
            "title": "Rank"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "dy": -180,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "properties.NAME",
          "type": "nominal",
          "condition": [
            {
              "test": "datum['properties.NAME']== 'Finland'",
              "value": [
                "Finland is ranked 1 among 149 countries in 2021."
              ]
            }
          ]
        },
        "color": {
          "value": "darkblue"
        },
        "opacity": {
          "condition": {
            "test": "datum['properties.NAME']== 'Finland'",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "dy": 0,
        "dx": 100,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "properties.NAME",
          "type": "nominal",
          "condition": [
            {
              "test": "datum['properties.NAME']== 'Afghanistan'",
              "value": [
                "Afghanistan is ranked last among 149 countries in 2021."
              ]
            }
          ]
        },
        "color": {
          "value": "darkblue"
        },
        "opacity": {
          "condition": {
            "test": "datum['properties.NAME']== 'Afghanistan'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {
    "background": "#FBF9F7",
    "view": {
      "stroke": "transparent"
    }
  }
}